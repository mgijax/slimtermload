#!/bin/sh
#
#  runMpSlimQC
###########################################################################
#
# A copy of this script is intended to reside in /usr/local/bin on all
# servers to make it available in the common PATH.
#
# Its allows someone to run the MP QC reports without having
# to provide the full path to where the wrapper script is installed.
#
###########################################################################

usage ()
{
    echo "Usage: runMpSlimQC input_file"
    echo "       where"
    echo "           input_file = path to the MP Slim input file"
    exit 1
}

LOADDIR=/usr/local/mgi/live/dataload/vocabbrevload
WRAPPER=${LOADDIR}/bin/vaQC.sh
CONFIG=mpslimload.config
#echo ${CONFIG}
#
# The load product is not installed on all servers, so make sure
# it exists on this one.
#
if [ ! -d ${LOADDIR} ]
then
    echo "The vocabbrevload software does not exist on this server"; exit 1
fi

#
# Make sure an input file was passed as an argument to the script.
#
if [ $# -eq 1 ]
then
    if [ ! -r $1 ]
    then
        echo "Input file does not exist: $1"; exit 1
    fi
else
    usage
fi

#
# Invoke the QC report wrapper script with the arguments that
# were passed to this script.
#
#echo "runMpSlimQC calling QC wrapper: ${WRAPPER} ${CONFIG} $*"
${WRAPPER} ${CONFIG} $*
